<!DOCTYPE html>
<html>
    <head>
        
        <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
        <meta charset="UTF-8">
        <script src="paper.js" type="text/javascript"></script>
        <script type="text/paperscript" canvas="canvas">
        

var path = new Path.Circle(new Point(view.size.width/2, view.size.height/2), 5) 

path.strokeColor = 'black';
var radius = path.bounds.width/2

function onFrame(event){
    $('#times').html(parseInt(event.time));
    radius += 0.001;
    path.scale(radius / 5);

    if (radius > 5.19){
        path.position.x += path.bounds.width/2 - 6;
        path.position.y += path.bounds.height/2 - 6;
        path.bounds.width = 5*2;
        path.bounds.height = 5*2;
        
        radius = 5;
    }
}

</script>
    </head>
    <body>
        <canvas id="canvas" resize="true"></canvas>
        <p id="times"></p>
    </body>
</html>
